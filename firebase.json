{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [ {
      "source": "**/*.@(html|htm)",
      "headers": [ {
        "key": "Access-Control-Allow-Origin",
        "value": "*"
      },
      {
        "key": "Access-Control-Allow-Credentials",
        "value": "true"
      },
      {
        "key": "Access-Control-Allow-Headers",
        "value": "application/json"
      } ]
    }
  ],
    "cleanUrls": true,

    "trailingSlash": false,

    "appAssociation": "AUTO"
  }
}
